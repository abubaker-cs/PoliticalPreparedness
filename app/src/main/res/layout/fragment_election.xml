<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <!-- DONE: Add node to connect Election ViewModel -->
    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.android.politicalpreparedness.election.elections.ElectionsViewModel"
            />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.android.politicalpreparedness.MainActivity"
        >

        <!-- Title: Upcoming Elections -->
        <TextView
            android:id="@+id/header_upcoming_election"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="20dp"
            android:text="@string/header_upcoming_elections"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <!-- RecyclerView: List of Upcoming Elections -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/upcomingElections"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="20dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/default_padding"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/header_saved_election"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_upcoming_election"
            app:listData="@{viewModel.upcomingElections}"
            />

        <!-- Upcoming Status: image-->
        <ImageView
            android:id="@+id/image_upcoming_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:civicsApiStatus="@{viewModel.apiStatus}"
            app:layout_constraintBottom_toBottomOf="@id/upcomingElections"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/upcomingElections"
            />

        <!-- Header: Saved Elections -->
        <TextView
            android:id="@+id/header_saved_election"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="20dp"
            android:text="@string/head_saved_elections"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/savedElections"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upcomingElections"
            />

        <!-- RecyclerView: List of Saved Elections -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/savedElections"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="20dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/default_padding"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_saved_election"
            app:listData="@{viewModel.savedElections}"
            />

        <!-- Progressbar: Saved Status -->
        <ProgressBar
            android:id="@+id/progress_saved_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.isDbLoading() ? View.VISIBLE : View.GONE }"
            app:layout_constraintBottom_toBottomOf="@id/savedElections"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/savedElections"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
