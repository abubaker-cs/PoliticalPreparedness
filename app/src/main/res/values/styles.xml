<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Avatar (Representative's image) -->
    <style name="avatar">
        <item name="android:layout_width">@dimen/size_sixty_four</item>
        <item name="android:layout_height">@dimen/size_sixty_four</item>
        <item name="android:layout_margin">@dimen/size_four</item>
    </style>

    <!-- Office Name -->
    <style name="office_name">
        <item name="android:layout_width">@dimen/size_zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/size_four</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Candidate's Name -->
    <style name="candidate_name">
        <item name="android:layout_width">@dimen/size_zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/size_four</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Candidate's Party -->
    <style name="candidate_party">
        <item name="android:layout_width">@dimen/size_zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/size_four</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <!-- Social Icon: Website, Facebook, Twitter -->
    <style name="social_icon">
        <item name="android:layout_width">@dimen/size_twenty_four</item>
        <item name="android:layout_height">@dimen/size_twenty_four</item>
        <item name="android:layout_marginEnd">@dimen/size_four</item>
        <item name="android:contentDescription">@string/website</item>
    </style>

    <!-- Item - Election Name -->
    <style name="item_election_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/size_eight</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textSize">@dimen/text_nineteen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Item - Election Date -->
    <style name="item_election_date">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/size_eight</item>
        <item name="android:layout_marginBottom">@dimen/size_twelve</item>
        <item name="android:textSize">@dimen/size_eighteen</item>
    </style>

    <!-- Item - Election Divider -->
    <style name="item_election_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_one</item>
        <item name="android:layout_marginTop">@dimen/size_sixteen</item>
        <item name="android:layout_marginBottom">@dimen/size_sixteen</item>
        <item name="android:background">@color/colorSecondaryLight</item>
    </style>

    <!--
        Fragment: Election Information
    -->

    <!-- Info: Sub-Heading -->
    <style name="info_sub_heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/text_sixteen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Info: Web Links -->
    <style name="info_weblinks">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/size_eight</item>
        <item name="android:textColor">@color/colorURL</item>
        <item name="android:textSize">@dimen/text_twenty_one</item>
    </style>

    <!-- Info: Election Date -->
    <style name="info_election_date">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/size_eight</item>
        <item name="android:textSize">@dimen/text_twenty_one</item>
    </style>

    <!-- Info: Divider - Election Information -->
    <style name="info_election_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_one</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <!-- Info: API Status -->
    <style name="info_api_status">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Info: Follow/un-follow Button -->
    <style name="info_btn_follow_unfollow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_zero</item>
        <item name="android:layout_margin">@dimen/size_twenty_four</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:enabled">@{voterInfoViewModel.election != null}</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Info: Main Heading -->
    <style name="view_main_heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/size_twenty_four</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>


    <!--
        Fragment: Search Representatives
    -->

    <!-- API Status -->
    <style name="search_api_status">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- RecyclerView: Search Results -->
    <style name="search_recyclerview_results">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_zero</item>
        <item name="android:layout_marginHorizontal">@dimen/size_eight</item>
        <item name="android:layout_marginTop">@dimen/size_twenty</item>
    </style>

    <!-- Heading: Search Results -->
    <style name="search_results_heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/size_eight</item>
        <item name="android:layout_marginTop">@dimen/text_twenty</item>
        <item name="android:textColor">@color/colorSecondaryDark</item>
        <item name="android:textSize">@dimen/text_twenty</item>
    </style>

    <!-- Container: Heading + Search Results -->
    <style name="search_results_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_zero</item>
    </style>

    <!-- Button: Find Representatives -->
    <style name="search_btn_find">
        <item name="android:layout_marginHorizontal">@dimen/size_eight</item>
        <item name="android:layout_marginTop">@dimen/size_eight</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_sixteen</item>
    </style>

    <!-- Button: Use GPS to find/fill my Address -->
    <style name="search_btn_gps">
        <item name="android:layout_marginHorizontal">@dimen/size_eight</item>
        <item name="android:backgroundTint">@color/colorSecondaryLight</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_sixteen</item>
    </style>

    <!-- EditText: Address -->
    <style name="search_edit_address">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/size_eight</item>
        <item name="android:inputType">textPostalAddress</item>
    </style>

    <!-- EditText: City -->
    <style name="search_edith_city">
        <item name="android:layout_width">@dimen/size_zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/size_eight</item>
        <item name="android:inputType">textPostalAddress</item>
    </style>

    <!-- Spinner: States -->
    <style name="search_spinner_states">
        <item name="android:layout_width">@dimen/size_zero</item>
        <item name="android:layout_height">@dimen/size_zero</item>
        <item name="android:layout_marginEnd">@dimen/size_zero</item>
        <item name="android:entries">@array/states</item>
        <item name="android:inputType">textPostalAddress</item>
    </style>

    <!-- EditText: Zip Code -->
    <style name="search_postal_code">
        <item name="android:layout_width">@dimen/size_zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/size_eight</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">5</item>
    </style>

    <!--
        Fragment: Launch
    -->

    <!-- Logo -->
    <style name="launch_logo">
        <item name="android:layout_height">@dimen/size_three_hundreds</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Button: Upcoming Elections -->
    <style name="launch_btn_upcoming">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/size_twenty</item>
        <item name="android:layout_marginBottom">80dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_sixteen</item>
    </style>

    <!-- Button: Find Representatives -->
    <style name="launch_btn_find">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/size_twenty</item>
        <item name="android:layout_marginBottom">@dimen/size_twenty</item>
        <item name="android:backgroundTint">@color/colorSecondaryDark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_sixteen</item>
    </style>

    <!--
        Fragment: Election
    -->

    <!-- Heading Styles for Upcoming + Saved Elections -->
    <style name="election_heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/size_eight</item>
        <item name="android:layout_marginTop">@dimen/size_twenty</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/text_eighteen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="elections_rv">
        <item name="android:layout_width">@dimen/size_zero</item>
        <item name="android:layout_height">@dimen/size_zero</item>
        <item name="android:layout_marginHorizontal">@dimen/size_eight</item>
        <item name="android:layout_marginTop">@dimen/size_sixteen</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/size_eight</item>
    </style>


</resources>
